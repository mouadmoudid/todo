rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only allow users to read/write their own settings document
    match /users/{userId}/settings/prefs {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Keep a safe default for other collections: authenticated users can read their own user documents
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
